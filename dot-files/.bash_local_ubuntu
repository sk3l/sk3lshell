#
# ~/.bash_local for Ubuntu
#

# Override PS1 prompt (purple host color)
export PS1='\[\e[1;36m\]\u\[\e[m\]@\[\e[1;32m\]\h\[\e[m\] \[\e[1;37m\]\W $ \[\e[m\]'


# Python virtual env
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Code/M45
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
source /usr/local/bin/virtualenvwrapper.sh

# package manager aliases
alias upm="sudo apt"
alias upd="sudo apt update"
alias upl="sudo apt list --upgradable"
alias upf="sudo apt-file list"
alias upg="sudo apt upgrade"

