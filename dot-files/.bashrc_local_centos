#
# ~/.bash_local for CentOS 
#

# Override PS1 prompt (red host color)
export PS1="\[\e[1m\e[38;5;44m\]\u\[\e[m\]@\[\e[1m\e[38;5;197m\]\h\[\e[m\] \[\e[1;37m\]\W $ \[\e[m\]"

# Docker
alias dls="docker ps"
alias dla="docker ps -a"
alias dst="docker start"
alias dsp="docker stop"
alias drm="docker rm"

# package manager aliases
alias ypm="sudo yum"
alias ypd="sudo yum update"
alias ypg="sudo yum upgrade"

